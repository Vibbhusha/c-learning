#include <stdio.h>

int getSmallest(int arr[], int len)
{
    // assign first array element as smallest
    int min = arr[0];
    
    // linearly search for the smallest element
    for(int i=1; i < len; i++)
    {
        // if the current array element is smaller
        if (arr[i] < min)
            min = arr[i];
    }
    
    return min;
    
}
int main()
{
    int arr[] = {5, 8, 7, 2, 12, 4};
    
